<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Make tests noisy so you actually see output -->
  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>

  <!-- Example: match your CAP packages -->
  <logger name="com.binlah.sap.btp.cpi" level="DEBUG"/>
  <logger name="com.sap.cds" level="INFO"/>
</configuration>
